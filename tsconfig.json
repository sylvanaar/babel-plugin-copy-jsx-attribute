{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "module": "ESNext",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "paths": {
      "@src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "outDir": "lib"
  },
  "exclude": ["node_modules"]
}
